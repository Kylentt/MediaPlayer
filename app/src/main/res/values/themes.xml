<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MediaPlayer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/accentColor</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="P">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="titleTextStyle">@id/title</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="HomeMenuButton" parent="Theme.MaterialComponents">
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body2</item>
        <item name="shapeAppearanceOverlay">@style/RoundedSquare</item>
        <item name="android:gravity">center_vertical</item>
        <item name="backgroundTint">@color/materialButtonWidget</item>
        <item name="android:textColor">@color/widgetColor</item>
        <item name="iconTint">@color/widgetColor</item>
        <item name="android:outlineProvider">background</item>

    </style>

    <style name="RoundedsquareExtra">
        <item name="cornerSize">30%</item>
    </style>

    <style name="playbuttonSrc">
        <item name="srcCompat">@drawable/ic_play_24_dark</item>
    </style>

    <style name="pauseButtonSrc">
        <item name="srcCompat">@drawable/ic_pause_24_dark</item>
    </style>

    <style name="favoriteButtonBorderSrc">
        <item name="srcCompat">
            @drawable/ic_favorite_border_24_dark
        </item>
    </style>

    <style name="playlistButtonSrc">
        <item name="srcCompat">
            @drawable/ic_playlist_play_24_dark
        </item>
    </style>

    <style name="bnvColor">
        <item name="android:background">#FFFFFFFF</item>
        <item name="elevation">5dp</item>
    </style>

    <style name="toolbarColor">
        <item name="android:background">@color/white</item>
    </style>

    <style name="textColor">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="layoutBackground">
        <item name="android:background">@color/white</item>
    </style>

    <style name="folderBackground">
        <item name="android:background">@color/lighterBackground</item>
        <item name="shapeAppearanceOverlay">@style/RoundedSquare</item>
    </style>

    <style name="ItemBackground">
        <item name="android:background">@color/lightBackground</item>
        <item name="android:scaleType">centerInside</item>
        <item name="shapeAppearanceOverlay">@style/RoundedSquare</item>
    </style>

    <style name="songItemShape">
        <item name="shapeAppearanceOverlay">@style/Circular</item>
    </style>

    <style name="Circular">
        <item name="cornerSize">50%</item>
    </style>

    <style name="RounderTopSquare">
        <item name="cornerSizeTopLeft">10%</item>
        <item name="cornerSizeTopRight">10%</item>
        <item name="strokeWidth">5dp</item>
    </style>

    <style name="percent5Square">
        <item name="cornerSize">5%</item>
    </style>

    <style name="RoundedSquare">
        <item name="cornerSize">10%</item>
    </style>

    <style name="corner15">
        <item name="cornerSize">15dp</item>
    </style>

    <style name="splashScreenTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_image</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>
</resources>